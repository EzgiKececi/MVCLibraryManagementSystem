@model Author
<br />


<div class="container">
    <h3 class="text-center fw-bold bg-body-tertiary">YAZAR EKLEME</h3>
</div>

<form method="post" asp-controller="Author" asp-action="Create">
   
    <div>
        <label>Yazar Adı</label>
        <input asp-for="FullName" class="form-control" type="text" />
        <span asp-validation-for="FullName" class="text-danger mt-2 fw-bold"></span>
    </div>

    <div>
        <label>Doğum Tarihi</label>
        <input asp-for="DateofBirth" class="form-control" type="date" />
        <span asp-validation-for="DateofBirth" class="text-danger mt-2 fw-bold"></span>
    </div>

    <button type="submit" class="btn btn-success mt-2">Kaydet</button>
</form>